# =============================================================================
# PORTFOLIO ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# SITE CONFIGURATION (Required)
# =============================================================================
NEXT_PUBLIC_SITE_URL=https://rohitai.in
NEXT_PUBLIC_SITE_NAME="Rohit Mandavkar - Portfolio"
NEXT_PUBLIC_SITE_DESCRIPTION="CS student, Web dev/Design & Thinker. Learning C/C++, Rust, JavaScript. Web + AI enthusiast."

# =============================================================================
# ANALYTICS & MONITORING (Optional)
# =============================================================================
# Google Analytics 4
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Google Search Console
GOOGLE_SITE_VERIFICATION=your-google-verification-code

# Other search engines
YANDEX_VERIFICATION=your-yandex-verification-code
YAHOO_VERIFICATION=your-yahoo-verification-code

# =============================================================================
# CONTACT INFORMATION (Optional)
# =============================================================================
NEXT_PUBLIC_CONTACT_EMAIL=rohit@rohitai.in
NEXT_PUBLIC_CONTACT_PHONE=+1234567890

# =============================================================================
# SOCIAL MEDIA LINKS (Required)
# =============================================================================
NEXT_PUBLIC_GITHUB_URL=https://github.com/Rohit-48
NEXT_PUBLIC_LINKEDIN_URL=https://www.linkedin.com/in/rohit48/
NEXT_PUBLIC_TWITTER_URL=https://x.com/rohitcpp
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/yourusername
NEXT_PUBLIC_YOUTUBE_URL=https://youtube.com/@yourusername

# =============================================================================
# API KEYS (Optional)
# =============================================================================
# Email service (if using contact form)
RESEND_API_KEY=your-resend-api-key
SENDGRID_API_KEY=your-sendgrid-api-key

# Newsletter service
MAILCHIMP_API_KEY=your-mailchimp-api-key
MAILCHIMP_LIST_ID=your-list-id

# =============================================================================
# DATABASE (Optional - if using dynamic content)
# =============================================================================
DATABASE_URL=your-database-connection-string

# =============================================================================
# SECURITY (Production)
# =============================================================================
# JWT Secret for authentication (if needed)
JWT_SECRET=your-super-secret-jwt-key

# Session secret
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=https://rohitai.in

# =============================================================================
# PERFORMANCE & MONITORING (Optional)
# =============================================================================
# Error monitoring
SENTRY_DSN=your-sentry-dsn

# Performance monitoring
NEW_RELIC_LICENSE_KEY=your-newrelic-key

# =============================================================================
# DEPLOYMENT SPECIFIC
# =============================================================================
# Build environment
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# CDN/Storage
NEXT_PUBLIC_CDN_URL=https://your-cdn.com
AWS_S3_BUCKET=your-s3-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CONTACT_FORM=true
NEXT_PUBLIC_ENABLE_NEWSLETTER=false
NEXT_PUBLIC_ENABLE_COMMENTS=false 